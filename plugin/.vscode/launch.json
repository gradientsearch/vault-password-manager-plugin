{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "promptString",
            "id": "pwmgr_URL",
            "description": "URL of Pwmgr"
        }
    ],
    "configurations": [
        {
            "name": "Unit Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ]
        },
        {
            "name": "Acceptance Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v",
                "-test.run",
                "TestAcc"
            ],
            "env": {
                "VAULT_ACC":"1",
                "TEST_pwmgr_USERNAME": "vault-plugin-testing",
                "TEST_pwmgr_PASSWORD": "Testing!123",
                "TEST_pwmgr_URL": "${input:pwmgr_URL}"
            }
        }
    ]
}